@model X.PagedList.IPagedList<VetCenter.Models.Medicamento>
@{
    ViewData["Title"] = "Medicamentos";
    Layout = "_PanelLayout";
}

<style>
    .vc-pager {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 18px;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial;
    }

    .vc-pager-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        color: #000;
        font-size: 15px;
        text-decoration: none;
    }

        .vc-pager-btn.disabled {
            color: #adb5bd;
            pointer-events: none;
        }

    .vc-pager-current {
        background-color: #d4edda;
        color: #198754;
        font-weight: 600;
        width: 36px;
        height: 36px;
        line-height: 36px;
        text-align: center;
        border-radius: 50%;
        display: inline-block;
        font-size: 16px;
    }

    .table td, .table th {
        padding-top: 18px;
        padding-bottom: 18px;
        line-height: 1.8;
        vertical-align: middle;
        text-align: center;
        color: #000 !important;
    }
</style>

<div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
    <h2 class="mb-0 fw-bold" style="color: #0d1b2a; font-size: 28px; margin-left: 32px;">
        Medicamentos
    </h2>

    <a asp-action="Nuevo" class="btn" style="background-color: #041c3e; color: #fff; margin-right: 32px;">
        Agregar Medicamento
    </a>
</div>

<div class="card-body p-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-primary text-white">

                <tr>
                    <th>ID
                        <i class="fa-solid fa-arrow-up text-secondary"></i>
                        <i class="fa-solid fa-arrow-down text-secondary"></i>
                    </th>
                    <th>Nombre
                        <i class="fa-solid fa-arrow-up text-secondary"></i>
                        <i class="fa-solid fa-arrow-down text-secondary"></i>
                    </th>
                    <th>Descripción
                        <i class="fa-solid fa-arrow-up text-secondary"></i>
                        <i class="fa-solid fa-arrow-down text-secondary"></i>
                    </th>
                    <th>Dosis Recomendada
                        <i class="fa-solid fa-arrow-up text-secondary"></i>
                        <i class="fa-solid fa-arrow-down text-secondary"></i>
                    </th>
                    <th>Fecha de Vencimiento
                        <i class="fa-solid fa-arrow-up text-secondary"></i>
                        <i class="fa-solid fa-arrow-down text-secondary"></i>
                    </th>
                    <th>Stock
                        <i class="fa-solid fa-arrow-up text-secondary"></i>
                        <i class="fa-solid fa-arrow-down text-secondary"></i>
                    </th>
                    <th style="width: 160px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.NombreDelMedicamento</td>
                        <td>@item.Descripcion</td>
                        <td>@item.DosisRecomendada</td>
                        <td>@item.FechaDeVencimiento.ToString("dd/MM/yyyy")</td>
                        <td>@item.Stock</td>

                        <td class="text-center">
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1" title="Editar">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mx-1"
                               onclick="return confirm('¿Estás seguro de eliminar este medicamento?')" title="Eliminar">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div style="background-color: #fff; border-top: 1px solid #dee2e6; border-bottom: 1px solid #dee2e6;">
            <nav class="vc-pager py-3">

                @if (Model.HasPreviousPage)
                {
                    <a class="vc-pager-btn" asp-action="Index" asp-route-pageNumber="1">
                        <i class="fa-solid fa-angles-left"></i>
                    </a>

                    <a class="vc-pager-btn" asp-action="Index" asp-route-pageNumber="@((Model.PageNumber - 1))">
                        <i class="fa-solid fa-angle-left"></i>
                    </a>
                }
                else
                {
                    <span class="vc-pager-btn disabled"><i class="fa-solid fa-angles-left"></i></span>
                    <span class="vc-pager-btn disabled"><i class="fa-solid fa-angle-left"></i></span>
                }

                <span class="vc-pager-current">@Model.PageNumber</span>

                @if (Model.HasNextPage)
                {
                    <a class="vc-pager-btn" asp-action="Index" asp-route-pageNumber="@((Model.PageNumber + 1))">
                        <i class="fa-solid fa-angle-right"></i>
                    </a>

                    <a class="vc-pager-btn" asp-action="Index" asp-route-pageNumber="@Model.PageCount">
                        <i class="fa-solid fa-angles-right"></i>
                    </a>
                }
                else
                {
                    <span class="vc-pager-btn disabled"><i class="fa-solid fa-angle-right"></i></span>
                    <span class="vc-pager-btn disabled"><i class="fa-solid fa-angles-right"></i></span>
                }
            </nav>
        </div>
    </div>
</div>
