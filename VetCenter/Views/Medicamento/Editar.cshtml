@model VetCenter.Models.Medicamento

@{
    ViewData["Title"] = "Editar Medicamento";
    Layout = "_PanelLayout";
}

<div class="container mt-4">
    <div class="card shadow-sm">

        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i> Editar Medicamento</h4>
        </div>

        <div class="card-body">

            <form asp-action="Editar" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NombreDelMedicamento" class="form-label fw-semibold"></label>
                        <input asp-for="NombreDelMedicamento" class="form-control" />
                        <span asp-validation-for="NombreDelMedicamento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DosisRecomendada" class="form-label fw-semibold"></label>
                        <input asp-for="DosisRecomendada" class="form-control" />
                        <span asp-validation-for="DosisRecomendada" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FechaDeVencimiento" class="form-label fw-semibold"></label>
                        <input asp-for="FechaDeVencimiento" type="date" class="form-control" />
                        <span asp-validation-for="FechaDeVencimiento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Stock" class="form-label fw-semibold"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Volver
                    </a>

                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Guardar Cambios
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>