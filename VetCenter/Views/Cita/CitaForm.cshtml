@model VetCenter.Models.Cita
@{
    ViewData["Title"] = Model.Id == 0 ? "Nueva Cita" : "Editar Cita";
    Layout = "_PanelLayout"; // Asegura que se use el layout correcto
}

<div class="card" style="border: 1px solid #dee2e6;">
    <div class="card-header bg-white py-3">
        <h4 class="mb-0 fw-normal">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Guardar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Fecha</label>
                <input asp-for="Fecha" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Hora</label>
                <input asp-for="Hora" type="time" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Motivo</label>
                <input asp-for="Motivo" class="form-control" />
            </div>

            <div class="mb-3">
                <select asp-for="MascotaId" class="form-select" asp-items="ViewBag.Mascotas">
                    <option value="">-- Seleccione Mascota --</option>
                </select>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="Estado" id="checkEstado">
                <label class="form-check-label" for="checkEstado">Activo</label>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>