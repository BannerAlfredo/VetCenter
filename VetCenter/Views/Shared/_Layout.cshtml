@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetCenter .NET</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />

    <style>
        .sidebar { min-height: calc(100vh - 56px); }
        .nav-link.active { background-color: #0d6efd; color: white !important; border-radius: 0.375rem; }
        body { font-size: .875rem; }
    </style>
</head>
<body>
    <!-- NAVBAR SUPERIOR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center fw-bold text-dark" asp-controller="Home" asp-action="Index">
                <i class="bi bi-activity me-2 text-primary"></i>
                VetCenter - .NET Core
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <!-- Reportes -->
                    <li class="nav-item">
                        <a class="btn btn-outline-primary" asp-controller="Reporte" asp-action="Index">
                            Reportes
                        </a>
                    </li>

                    <!-- Usuario logueado -->
                    @if (HttpContextAccessor.HttpContext.Session.GetString("usuario") != null)
                    {
                        <li class="nav-item d-flex align-items-center text-muted ms-3">
                            <i class="fa-solid fa-user me-1"></i>
                            @HttpContextAccessor.HttpContext.Session.GetString("usuario")
                        </li>

                        <!-- Botón Cerrar Sesión -->
                        <li class="nav-item ms-2">
                            <a asp-controller="Cuenta" asp-action="Logout" class="btn btn-outline-danger">
                                <i class="fa-solid fa-right-from-bracket me-1"></i> Cerrar Sesión
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container-fluid">
        <div class="row">
            <!-- SIDEBAR -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cita" ? "active" : "link-dark")"
                               asp-controller="Cita" asp-action="Index">
                                <i class="bi bi-activity me-2"></i>
                                Citas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cliente" ? "active" : "")"
                               asp-controller="Cliente" asp-action="Index">
                                <i class="bi bi-people me-2"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Mascota" ? "active" : "")"
                               asp-controller="Mascota" asp-action="Index">
                                <i class="fa-solid fa-cat me-2"></i> Mascotas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Medicamento" ? "active" : "")"
                               asp-controller="Medicamento" asp-action="Index">
                                <i class="fa-solid fa-cat me-2"></i> Medicamentos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Usuario" ? "active" : "")"
                               asp-controller="Usuario" asp-action="Index">
                                <i class="fa-solid fa-users-gear me-2"></i> Usuarios
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- BODY -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-light py-3 mt-5 border-top">
        <div class="container text-center">
            <p class="text-muted mb-0">© 2025 VetCare - Migrado a ASP.NET Core 9</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
