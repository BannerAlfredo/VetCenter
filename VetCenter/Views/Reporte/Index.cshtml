@model IEnumerable<VetCenter.Models.Cita>
@{
    ViewData["Title"] = "Reportes";
}

<div class="container mt-4">
    <h2 class="mb-3">Historial de Citas de Mascota</h2>

    <form asp-action="CitasPorMascota" method="get">
        <div class="mb-3">
            <label for="mascotaId" class="form-label">Selecciona una mascota:</label>
            <select name="mascotaId" id="mascotaId" class="form-control" asp-items="ViewBag.Mascotas" required>
                <option value="" disabled selected>-- Seleccione --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Ver Citas</button>

        @if (ViewData["SelectedMascotaId"] != null)
        {
            <a asp-controller="Cita" asp-action="ExportarPdf" asp-route-mascotaId="@ViewData["SelectedMascotaId"]"
               class="btn btn-outline-success ms-2">
                <i class="fa-solid fa-file-pdf me-1"></i> Descargar PDF
            </a>
        }
    </form>

    @if (Model != null)
    {
        <hr class="my-5" />

        @if (Model.Any())
        {
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Resultados del Reporte</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Id</th>
                                <th>Fecha</th>
                                <th>Hora</th>
                                <th>Motivo</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">@item.Id</td>
                                    <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Hora.ToString(@"hh\:mm")</td>
                                    <td>@item.Motivo</td>
                                    <td>@(item.Estado ? "Activa" : "Cancelada")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning mt-4">
                <i class="bi bi-info-circle me-2"></i> No se encontraron citas para la mascota seleccionada.
            </div>
        }
    }
</div>