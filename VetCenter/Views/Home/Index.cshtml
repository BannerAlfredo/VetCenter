@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-4">
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center border">
        <div class="container-fluid py-3">
            <h1 class="display-5 fw-bold text-primary">
                <i class="fa-solid fa-stethoscope me-2"></i>Bienvenido a VetCenter
            </h1>
            <p class="col-md-8 fs-4 mx-auto text-muted">
                Sistema integral para la gestión de historias clínicas, pacientes y citas veterinarias.
            </p>
        </div>
    </div>

    <div class="row align-items-md-stretch">

        <div class="col-md-4 mb-4">
            <div class="h-100 p-4 text-white bg-primary rounded-3 shadow-sm position-relative overflow-hidden">
                <div style="position: absolute; right: -20px; top: -20px; opacity: 0.3;">
                    <i class="bi bi-people-fill" style="font-size: 8rem;"></i>
                </div>
                <h2 class="position-relative">Clientes</h2>
                <p class="position-relative">Administra la información de los dueños y sus datos de contacto.</p>
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-outline-light position-relative stretched-link">
                    Ir a Clientes <i class="fa-solid fa-arrow-right ms-1"></i>
                </a>
                <a asp-controller="Cuenta" asp-action="Login" class="btn btn-outline-dark">
                    Iniciar Sesión <i class="fa-solid fa-arrow-right ms-1"></i>
                </a>

            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="h-100 p-4 text-white bg-success rounded-3 shadow-sm position-relative overflow-hidden">
                <div style="position: absolute; right: -20px; top: -10px; opacity: 0.3;">
                    <i class="fa-solid fa-cat" style="font-size: 8rem;"></i>
                </div>
                <h2 class="position-relative">Mascotas</h2>
                <p class="position-relative">Registra pacientes, razas y asigna dueños a cada animal.</p>
                <a asp-controller="Mascota" asp-action="Index" class="btn btn-outline-light position-relative stretched-link">
                    Ir a Mascotas <i class="fa-solid fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="h-100 p-4 bg-warning border rounded-3 shadow-sm position-relative overflow-hidden">
                <div style="position: absolute; right: -20px; top: -20px; opacity: 0.3;">
                    <i class="bi bi-calendar-check-fill" style="font-size: 8rem; color: #fff;"></i>
                </div>
                <h2 class="text-dark position-relative">Citas Médicas</h2>
                <p class="text-dark position-relative">Agenda nuevas consultas y descarga el historial clínico.</p>
                <a asp-controller="Cita" asp-action="Index" class="btn btn-outline-dark position-relative stretched-link">
                    Ver Agenda <i class="fa-solid fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center text-muted">
            <small><i class="bi bi-shield-check me-1"></i> Sistema seguro y actualizado • Versión .NET 9.0</small>
        </div>
    </div>
</div>