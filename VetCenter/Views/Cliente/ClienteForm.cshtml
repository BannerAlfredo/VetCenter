@model VetCenter.Models.Cliente
@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "_PanelLayout";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form asp-action="Guardar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3 row">
                <label asp-for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input asp-for="Nombre" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Apellido" class="col-sm-2 col-form-label">Apellido</label>
                <div class="col-sm-10">
                    <input asp-for="Apellido" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Correo" class="col-sm-2 col-form-label">Correo</label>
                <div class="col-sm-10">
                    <input asp-for="Correo" type="email" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Telefono" class="col-sm-2 col-form-label">Teléfono</label>
                <div class="col-sm-10">
                    <input asp-for="Telefono" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Direccion" class="col-sm-2 col-form-label">Dirección</label>
                <div class="col-sm-10">
                    <input asp-for="Direccion" class="form-control" />
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-save me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fa-solid fa-times me-1"></i> Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
