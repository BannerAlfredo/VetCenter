@model VetCenter.Models.Cliente
@{
    ViewData["Title"] = "Detalle de Cliente";
    Layout = "_PanelLayout";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="bi bi-person me-2"></i> Detalle del Cliente</h5>
        <div>
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                <i class="fa-solid fa-pen-to-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm ms-2">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">ID:</div>
            <div class="col-md-10">@Model.Id</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Nombre:</div>
            <div class="col-md-10">@Model.Nombre</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Apellido:</div>
            <div class="col-md-10">@Model.Apellido</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Correo:</div>
            <div class="col-md-10">@(Model.Correo ?? "---")</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Teléfono:</div>
            <div class="col-md-10">@(Model.Telefono ?? "---")</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Dirección:</div>
            <div class="col-md-10">@(Model.Direccion ?? "---")</div>
        </div>

        @if (Model.Mascotas != null && Model.Mascotas.Any())
        {
            <hr />
            <h6 class="fw-bold mt-4">Mascotas Registradas:</h6>
            <ul>
                @foreach (var mascota in Model.Mascotas)
                {
                    <li>@mascota.Nombre (@mascota.Tipo - @mascota.Raza)</li>
                }
            </ul>
        }
    </div>
</div>
