@model VetCenter.Models.Mascota
@{
    ViewData["Title"] = "Detalle de Mascota";
    Layout = "_PanelLayout";
}

<div class="card" style="border: 1px solid #dee2e6;">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 text-dark">
            <i class="fa-solid fa-paw me-2"></i> Detalle de la Mascota
        </h5>
        <div>
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                <i class="fa-solid fa-pen-to-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm ms-2">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">ID:</div>
            <div class="col-md-10">@Model.Id</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Nombre:</div>
            <div class="col-md-10">@Model.Nombre</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Tipo:</div>
            <div class="col-md-10">@Model.Tipo</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Raza:</div>
            <div class="col-md-10">@Model.Raza</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Edad:</div>
            <div class="col-md-10">@Model.Edad años</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Dueño:</div>
            <div class="col-md-10">@(Model.Cliente?.Nombre + " " + Model.Cliente?.Apellido)</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-2 fw-bold">Estado:</div>
            <div class="col-md-10">@(Model.Estado ? "true" : "false")</div>
        </div>
    </div>
</div>