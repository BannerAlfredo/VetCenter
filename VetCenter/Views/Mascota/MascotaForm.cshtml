@model VetCenter.Models.Mascota
@{
    ViewData["Title"] = "Editar Mascota";
    Layout = "_PanelLayout";
}

<div class="card">
    <div class="card-header">
        <h5>@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form asp-action="Guardar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3 row">
                <label asp-for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input asp-for="Nombre" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Tipo" class="col-sm-2 col-form-label">Tipo</label>
                <div class="col-sm-10">
                    <input asp-for="Tipo" class="form-control" placeholder="Ej: Perro, Gato" required />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Raza" class="col-sm-2 col-form-label">Raza</label>
                <div class="col-sm-10">
                    <input asp-for="Raza" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Edad" class="col-sm-2 col-form-label">Edad</label>
                <div class="col-sm-10">
                    <input asp-for="Edad" type="number" class="form-control" min="0" />
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="ClienteId" class="col-sm-2 col-form-label">Dueño</label>
                <div class="col-sm-10">
                    <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes" required>
                        <option value="">-- Seleccione un Cliente --</option>
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Estado">
                        <label class="form-check-label" asp-for="Estado">Activo</label>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
